<% provide(:title, "login") %>

<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "sr-only" %>
    <%= form.email_field :email, class: "form-control", required: true, placeholder: User.human_attribute_name(:email) %>
  </div>
  <div class="form-group">
    <%= form.label :password, class: "sr-only" %>
    <%= form.password_field :password, class: "form-control", required: true, placeholder: User.human_attribute_name(:password) %>
  </div>
  <div class="form-group">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
